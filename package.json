{
    "name": "website",
    "version": "0.0.0",
    "private": true,
    "license": "MIT",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "node --run=start:prod",
        "start:prod": "docker compose --profile production up -d tor",
        "start:dev": "docker compose --profile development up -d nginx",
        "stop": "docker compose down --remove-orphans",
        "mongosh": "node --env-file=\"./config/mongo/debug/secrets/.env\" -r ts-node/register ./config/mongo/debug/mongosh.ts",
        "onionscan": ".\\utils\\onionscan",
        "prettier": "prettier --write **/*.{js,cjs,mjs,jsx,ts,cts,mts,tsx,json,css,scss,html}",
        "eslint": "eslint . -c ./config/eslint/eslint.config.cjs",
        "eslint:fix": "node --run=eslint -- --fix",
        "license-report": ".\\config\\license-report\\index.sh"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Vessel9817/onion-site-template.git"
    },
    "workspaces": {
        "packages": [
            "./config/express",
            "./config/mongo",
            "./config/license-report"
        ]
    },
    "devDependencies": {
        "@eslint/js": "^9.32.0",
        "@eslint/json": "^0.13.1",
        "@stylistic/eslint-plugin": "^4.2.0",
        "@types/node": "^24.2.0",
        "eslint": "^9.32.0",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "globals": "^16.3.0",
        "license-report": "^6.8.0",
        "prettier": "^3.6.2",
        "ts-node": "^10.9.2",
        "tslib": "^2.8.1",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.39.0"
    }
}
