{
    "name": "website",
    "version": "0.0.0",
    "private": true,
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Vessel9817/onion-site-template.git"
    },
    "homepage": "https://github.com/Vessel9817/onion-site-template#readme",
    "readme": "https://github.com/Vessel9817/onion-site-template/blob/main/README.md",
    "bugs": {
        "url": "https://github.com/Vessel9817/onion-site-template/issues"
    },
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "node --run=start:prod",
        "start:prod": "docker compose --profile production up -d vanguards",
        "start:dev": "docker compose --profile development up -d",
        "stop": "docker compose --profile production --profile development --profile license-report down --remove-orphans && docker volume rm website_tor-data",
        "mongosh": "node --env-file=\"./src/mongo/debug/secrets/.env\" -r ts-node/register ./src/mongo/debug/mongosh.ts",
        "onionscan": ".\\utils\\onionscan",
        "prettier": "prettier --write **/*.{js,cjs,mjs,jsx,ts,cts,mts,tsx,json,css,scss,html}",
        "eslint": "eslint . -c ./src/eslint/eslint.config.cjs",
        "eslint:fix": "node --run=eslint -- --fix",
        "license-report": "docker compose up -d license-report"
    },
    "workspaces": {
        "packages": [
            "./src/express",
            "./src/mongo",
            "./src/license-report"
        ]
    },
    "devDependencies": {
        "@eslint/js": "^9.39.3",
        "@eslint/json": "^1.0.1",
        "@stylistic/eslint-plugin": "^5.9.0",
        "@types/node": "^25.3.2",
        "eslint": "^10.0.2",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-jsx-a11y": "^6.10.2",
        "globals": "^16.3.0",
        "prettier": "^3.8.1",
        "ts-node": "^10.9.2",
        "tslib": "^2.8.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.56.1"
    }
}
