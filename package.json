{
    "name": "website",
    "version": "0.0.0",
    "private": true,
    "license": "MIT",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "node --run=start:prod",
        "start:dev": "docker compose --profile development up -d",
        "start:prod": "docker compose --profile production up -d",
        "kafka_broker": "docker compose up -d kafka_broker",
        "create_topic": "docker exec -i kafka_broker bash /opt/kafka/bin/kafka-topics.sh --create --bootstrap-server localhost:9092 --topic",
        "mongosh": "node --env-file=\"./config/mongo/debug/.env\" -r ts-node/register ./config/mongo/debug/mongosh.ts",
        "onionscan": ".\\utils\\onionscan",
        "prettier": "prettier --write **/*.{js,cjs,mjs,jsx,ts,cts,mts,tsx,json,css,scss,html}",
        "eslint": "eslint . -c ./config/eslint/eslint.config.cjs",
        "eslint:fix": "node --run=eslint -- --fix",
        "tsc": "tsc --noEmit",
        "license-report": ".\\config\\license-report\\index.cmd"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Vessel9817/onion-site-template.git"
    },
    "workspaces": {
        "packages": [
            "./config/api",
            "./config/express",
            "./config/kafka",
            "./config/mongo"
        ]
    },
    "devDependencies": {
        "@eslint/js": "^9.23.0",
        "@eslint/json": "^0.11.0",
        "@stylistic/eslint-plugin": "^4.2.0",
        "@types/node": "^22.13.8",
        "@typescript-eslint/utils": "^8.28.0",
        "eslint": "^9.23.0",
        "eslint-plugin-import": "^2.27.4",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-react": "^7.37.4",
        "globals": "^16.0.0",
        "license-report": "^6.7.2",
        "prettier": "^3.5.2",
        "ts-node": "^10.9.2",
        "tslib": "^2.8.1",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.28.0"
    }
}
