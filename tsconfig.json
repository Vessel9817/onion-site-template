{
    "compilerOptions": {
        "target": "ES2015",
        "lib": [
            // General JS
            "ESNext",

            // Web interfaces
            "dom",
            "dom.iterable",

            // Asynchronicity and promises
            "ES2020.Promise",
            "ESNext.asynciterable"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": false,
        "typeRoots": ["./node_modules/@types"],
        "downlevelIteration": true,
        "importHelpers": true,
        "newLine": "lf",
        "stripInternal": true,
        "outDir": "./dist" // Unused: https://stackoverflow.com/a/48798945
    },
    "include": ["./config/eslint/**/*"],
    "exclude": [
        "**/coverage/",
        "**/licenses/",
        "**/logs/",
        "**/node_modules/",
        "**/secrets/",
        "**/temp/",
        "**/tmp/",
        "**/dist/"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS" // Required for ts-node
        }
    }
}
